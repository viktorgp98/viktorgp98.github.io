---
import GradientText from "@/components/gradientText/GradientText.jsx";
import { HoverButton } from "@/components/button/HoverButton.jsx";

const sites = [
  {
    link: "/documents/CV-ViktorGonzalez-2025.pdf",
    title: "CV",
    description: "Descargar CV de Viktor Gonzalez",
    icon: "icon-[pepicons-print--cv]",
    download: "cv_viktorgonzalez.pdf",
  },

  {
    link: "https://www.linkedin.com/in/viktorgonzalezp/",
    title: "LinkedIn",
    description:
      "Abrir en nueva pestaña el perfil de LinkedIn de Viktor Gonzalez",
    icon: "icon-[ph--linkedin-logo-duotone]",
  },
  {
    link: "https://github.com/viktorgp98",
    title: "Github",
    description:
      "Abrir en nueva pestaña el perfil de Github de Viktor Gonzalez",
    icon: "icon-[ph--github-logo-duotone]",
  },
];
const pretitle = `Desarrollador { FullStack }`;
---

<section class="section secc-hero relative h-screen w-full">
  <div
    class="absolute inset-0 bg-cover bg-center bg-fixed bg-no-repeat flex md:items-center justify-center bg-dark w-full h-full"
    style="background-image: url('/images/banner.webp');"
  >
    <div
      class="container mx-auto top-20 p-5 md:p-11 absolute z-10 flex flex-col items-start text-white gap-14"
    >
      <!-- available -->
      <div
        tabindex="0"
        class="available absolute
        right-8 -top-15 flex-row flex justify-end items-center gap-3 text-sm text-zinc-400"
      >
        <div class="size-2 rounded-full bg-green-400 z-10 animate-pulse"></div>
        <span  class="text-xs">Disponible para trabajar</span>
      </div>
      <!-- titles -->
      <section
        aria-labelledby="titlePrincipal"
        tabindex="0"
        class="flex flex-col gap-4 md:gap-5 items-start"
      >
        <h2
          aria-label="Desarrollador Fullstack"
          class="text-[clamp(1rem, calc(4vw + .5rem), 4rem)]"
        >
          {pretitle}
        </h2>
        <GradientText
          colors={["#d80e8a", "#f780c9", "#d80e8a", "#f780c9", "#d80e8a"]}
          animationSpeed={8}
          showBorder={false}
        >
          <h1
            id="titlePrincipal"
            class="text-[clamp(2rem,calc(7vw+1rem),5rem)]/none font-bold"
          >
            VIKTOR GONZÁLEZ PINTO
          </h1>
        </GradientText>

        <p class="text-[clamp(1rem, calc(4vw + .5rem), 4rem)] italic">
          <span class="sr-only"
            >Más de un año de experiencia como Analista Programador, de Chile.
          </span>
          <span>

            +1 año de experiencia.
            <span class="text-primary">Analista Programador</span>
            de Chile
            <span
            class="icon-[openmoji--flag-chile] "
            role="none"
            aria-hidden="true"></span>
            <br />
            Apasionado por la innovación web
          </span>
        </p>
      </section>
      <!-- enlaces  -->
      <div
        class="call-to-action flex flex-col md:flex-row gap-10 items-center container mx-auto"
      >
        <div
          class="buttons flex items-center md:justify-start gap-4 md:gap-x-4"
        >
          <!-- projects -->
          <a
            aria-label="Ver todos los proyectos"
            class="w-full h-full relative"
            href="#projects"
            onclick="lenis.scrollTo('#projects')"
          >
            <HoverButton> Ver proyectos </HoverButton>
          </a>
          <!-- contact -->
          <a
            href="#contact"
            onclick="lenis.scrollTo('#contact')"
            class="justify-center whitespace-nowrap
          rounded-md text-sm font-medium ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring
          focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0
          border border-input bg-background h-10 px-4 py-2 group transition-all duration-200 hover:scale-105 hover:bg-primary hover:text-primary-foreground
          flex items-center gap-2"
          >
            <span class="flex items-center gap-2 font-semibold text-lg">
              Contacto
              <span
                class="icon-[carbon--send] h-4 w-4 transition-transform duration-100 group-hover:translate-x-1"
                role="img"
                aria-hidden="true"></span>
            </span>
          </a>
        </div>
        <!-- social links -->
        <div
          class="social-links flex items-center justify-center md:justify-end"
        >
          {
            sites.map((site) => (
              <a
                href={site.link}
                download={site.download}
                target="_blank"
                aria-label={site.description}
              >
                <title>{site.title}</title>
                <span
                  class={`${site.icon} text-primary icon-size px-10 hover:scale-125 hover:bg-primary transition-all duration-200`}
                  role="img"
                  aria-hidden="true"
                />
              </a>
            ))
          }
        </div>
      </div>

      <div
        class="absolute inset-x-0 bottom-0 top-130 md:top-140 flex flex-row gap-x-5 items-center justify-center pt-10"
      >
        <a
          href="#experience"
          onclick="lenis.scrollTo('#experience')"
          aria-label="Boton para desplazar a siguiente seccion"
        >
          <title>Siguiente seccion</title>
          <span
            class="icon-[ph--arrow-circle-down-duotone] w-10 h-10 animate-[sink_1s_ease-in-out_infinite]"
            role="img"
            aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </div>
</section>
