---
import HoverCard from "@/components/HoverCard.astro";

import movie4all from "@/assets/images/movie4all-image.webp";
---

<section
  id="projects"
  class="section secc-projects min-h-screen py-10 bg-primary dark:bg-dark relative"
>
  <div class="container mx-auto py-7 px-5 md:p-10 space-y-7">
    <div class="section-title pb-7">
      <h2 class="uppercase text-center md:text-left dark:text-primary">
        Proyectos /
      </h2>
    </div>
    <div
      class="flex flex-col md:grid grid-cols-4 md:grid-cols-4 grid-rows-7 gap-7"
    >
      <div class="col-span-2 row-span-4 bg-light shadow-lg">
        <HoverCard
          id="1"
          title="Movies4All"
          description="Aplicación de películas y series con carga dinámica de datos."
          techstack={["ReactNative", "Tailwind", "AppWrite"]}
          codeUrl="https://github.com/viktorgp98/movies-app"
          image={movie4all}
        />
      </div>
      <div
        class="col-span-2 row-span-3 col-start-1 row-start-5 bg-light overflow-hidden shadow-lg"
      >
        <HoverCard id="2" image="https://picsum.photos/600/400?random=10" />
      </div>
      <div
        class="col-span-2 row-span-3 col-start-3 row-start-1 bg-light shadow-lg"
      >
        <HoverCard id="3" image="https://picsum.photos/600/400?random=6" />
      </div>
      <div
        class="col-span-2 row-span-4 col-start-3 row-start-4 bg-light shadow-lg"
      >
        <HoverCard id="4" image="https://picsum.photos/600/400?random=5" />
      </div>
    </div>
  </div>
</section>
